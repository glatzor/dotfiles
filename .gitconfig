[color]
branch = auto
diff = auto
status = auto
ui = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green
untracked = cyan

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
st = status
ci = commit
br = branch
co = checkout
df = diff
lg = log -p
lola = log --graph --decorate --pretty=oneline --abbrev-commit
pub = "!f() { git push ${1:-origin} `git symbolic-ref HEAD`; }; f"

[branch]
autosetupmerge = true

[user]
name = Sebastian Heinlein
email = devel@glatzor.de

[giggle]
compact-mode = false
main-window-maximized = true
main-window-geometry = 0x0+0+0
main-window-view = HistoryView
history-view-vpane-position = 293
file-view-vpane-position = 415

[push]
default = simple
