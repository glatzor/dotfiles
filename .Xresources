! XAUTOLOCK
Xautolock.timer: 5
Xautolock.secure: 1
Xautolock.locker: killall -SIGUSR1 dunst; i3lock --nofork --dpms -c 000000; killall -SIGUSR2 dunst

! FONT SETTINGS
Xft.antialias:  true
Xft.rgba:       rgb
Xft.autohint:	1
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.render:     true
Xft.dpi:	96

! URXVT
URxvt.termName:        rxvt-256color 
URxvt.geometry:	       80x24
URxvt.depth:           32
URxvt.scrollBar:       false
URxvt.font:            xft:Hack-10:regular
URxvt.letterSpace:     -1
!URxvt.lineSpace:       -1
URxvt.perl-ext-common: default,matcher,urxvt-colors
URxvt.url-launcher:    /usr/bin/x-www-browser
URxvt.matcher.button:  1
URxvt.urgentOnBell:    true
URxvt.saveLines:       65535
URxvt.keysym.F12:      perl:urxvt-colors:
 
! XTERM
xterm*VT100.geometry:     80x25
xterm*faceName:           xft:Hack
xterm*faceSize:           10
xterm*dynamicColors:      true
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          512
xterm*scrollBar:          false
xterm*toolBar:            false
xterm*.bellIsUrgent:      true


! Solarized color scheme for the X Window System
! http://ethanschoonover.com/solarized

! Common
#define S_yellow        #b58900
#define S_orange        #cb4b16
