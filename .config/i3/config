bindsym $mod+Shift+d exec --no-startup-id j4-dmenu-desktop --term urxvt --display-binar --dmenu "dmenu -sb '#586e75' -sf '#eee8d5' -nb '#eee8d5' -nf '#586e75' -fn 'Hack-10'"

